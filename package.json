{
  "name": "kriz-ui-next",
  "version": "1.0.2",
  "description": "Collection of reusable UI components.",
  "author": "Cristian Canciani <89451020+Kriztiam@users.noreply.github.com> (https://github.com/kriztiam)",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kriztiam/kriz-ui.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/styles/base.css",
      "default": "./dist/styles/base.css"
    },
    "./red": {
      "import": "./dist/styles/themes/red.css",
      "default": "./dist/styles/themes/red.css"
    },
    "./yellow": {
      "import": "./dist/styles/themes/yellow.css",
      "default": "./dist/styles/themes/yellow.css"
    },
    "./green": {
      "import": "./dist/styles/themes/green.css",
      "default": "./dist/styles/themes/green.css"
    },
    "./blue": {
      "import": "./dist/styles/themes/blue.css",
      "default": "./dist/styles/themes/blue.css"
    },
    "./lavender": {
      "import": "./dist/styles/themes/lavender.css",
      "default": "./dist/styles/themes/lavender.css"
    },
    "./purple": {
      "import": "./dist/styles/themes/purple.css",
      "default": "./dist/styles/themes/purple.css"
    },
    "./white": {
      "import": "./dist/styles/themes/white.css",
      "default": "./dist/styles/themes/white.css"
    }
  },
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "stylelint": "stylelint '**/*.{css,scss}'",
    "stylelint:fix": "stylelint '**/*.{css,scss}' --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "peerDependencies": {
    "next": "^15.0.0",
    "next-intl": "^4.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@rollup/plugin-alias": "5.1.1",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-swc": "0.4.0",
    "@rollup/plugin-terser": "0.4.4",
    "@svgr/rollup": "8.1.0",
    "@swc/core": "1.13.5",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "24.9.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "cssnano": "7.1.1",
    "eslint": "9.38.0",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "next": "15.5.6",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rollup": "4.52.5",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-delete": "3.0.1",
    "rollup-plugin-dts": "6.2.3",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-preserve-directives": "1.1.3",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.1",
    "typescript": "5.9.3"
  }
}
